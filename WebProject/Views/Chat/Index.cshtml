@model WebApplication5.Models.ChatModel
@{
    ViewBag.Title = "ChatTest Page";
}

<head>
    <title>Chat</title>
    <script src="/Scripts/jquery-1.7.1.js"></script>
    <script src="/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="/Scripts/jquery-ui-1.8.20.js"></script>
    <script src="/Scripts/jquery.validate.js"></script>
    <script src="/Scripts/Chat.js"></script>
    <script src="/Scripts/jquery.validate.unobtrusive.js"></script>
    <style type="text/css">
        body, html
        {
            height: 100%;
            text-align: center;
            margin: 0;
            padding: 0;
            overflow:hidden;
        }
        
        div, body, table, p
        {
            font-family: Verdana;
            font-size: medium;
        }
        
        #container
        {
            height: 80%;
            width: 80%;
            position: absolute;
            top: 10%;
            left: 10%;
            min-width: 320px;
            background-color: Silver;
            box-shadow: 0 8px 4px -4px rgba(0,0,0,0.4);
        }
        
        .box
        {
            display: inline-block;
            margin: 10px;
            padding: 8px 15px;
            background: #B8ED01;
            border: 1px solid rgba(0,0,0,0.15);
            border-radius: 4px;
            transition: all 0.3s ease-out;
            box-shadow: inset 0 1px 0 rgba(255,255,255,0.5), 0 2px 2px rgba(0,0,0,0.3), 0 0 4px 1px rgba(0,0,0,0.2); /* Font styles */
            text-decoration: none;
            text-shadow: 0 1px rgba(255,255,255,0.7);
        }
        
        #Error
        {
            width: 80%;
            left: 10%;
            position: absolute;
            height: 10%;
            top: 91%;
            color: Red;
            font-weight: bold;
            text-align: center;
            display : none;
        }
        
        #LastRefresh
        {
            display: inline;
            position: absolute;
            font-size: xx-small;
            text-align: right;
            top: 7%;
            left: 10%;
            width: 80%;
        }
        #YourNickname
        {
            display: inline;
            position: absolute;
            font-size: medium;
            font-weight: bold;
            text-align: left;
            top: 7%;
            left: 10%;
            width: 50%;
        }
    </style>
</head>
<body>
    @{
        if(Model == null) {
            <div class="alert alert-info">
                Please log in to Facebook to use the chat feature.
            </div>
        }
        else {
            <div id="YourNickname">
            </div>
            <div id="LastRefresh">
            </div>
            <div id="container">
                <div class="box" id="LoginPanel">
                    Nick name :
                    <input type="text" id="txtNickName" />
                    <button id="btnLogin" value="Start">
                        Start</button>
                </div>
            </div>
            <div id="Error" style="display:none" >
            </div>
            @Ajax.ActionLink("Login", "Index", new { thisUserLoggedOn = "" }, new AjaxOptions { UpdateTargetId = "container", OnFailure = "LoginOnFailure", OnSuccess = "LoginOnSuccess" }, new { @id = "LoginButton", @style = "visibility:hidden;" })
        }
    }
    
</body>
</html>

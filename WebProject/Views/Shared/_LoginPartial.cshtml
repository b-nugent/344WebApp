@using Microsoft.AspNet.Identity
@using WebApplication5.Models;
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Home", routeValues: null, htmlAttributes: new { title = "Home" })
        </li>
        <li><button id="logout" type="submit" class="btn btn-default navbar-btn">Log off</button></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
         @Html.Partial("_ExternalLoginsListPartial", new WebApplication5.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
    </ul>
}
